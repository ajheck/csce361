@model RoomQuery.Models.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Room Query</title>
</head>

<div>
    <h1>Room Query</h1>
    <p class="lead">Description.</p>
    <p>
        <a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a>
    </p>
</div>

<div class="container">
    <canvas id="myChart"></canvas>
</div>

<div>
    The current SRC population is: @Model.Population
</div>

<div>
    The current TA population is: @Model.ActiveOfficeHours.Count()
</div>

<h4>
    The Current TAs who are in are:
</h4>
@foreach(var hour in Model.ActiveOfficeHours)
{
    <p>
        Course: @hour.Course.CourseNumber
    </p>
    <p>
        Hours: @hour.Start to @hour.End
    </p>
    <p>
        TA: @hour.Student.FirstName @hour.Student.LastName
    </p>
}
@section Scripts {
    @Scripts.Render("~/Scripts/populationChart.js")
}