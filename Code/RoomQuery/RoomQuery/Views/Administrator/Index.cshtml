
@{
    ViewBag.Title = "Administrator";
}

<h2>Administrator</h2>

<form action="/Administrator/changeTAStatus" method="POST">
    <div class="form-group">
        <label for="nuid">NUID:</label>
        <input type="text" class="form-control" name="nuid" />
    </div>
    <button class="btn btn-default" type="submit" value="Scan Ncard">Modify TA status</button>
</form>

<br />

<form action="/Administrator/addTA" method="POST">
    <div class="form-group">
        <label for="nuid">NUID:</label>
        <input type="text" class="form-control" name="nuid" />
     </div>
    <div class="form-group">
        <label for="dayOfWeek">Day of Week:</label>
        <select name="dayOfWeek" class="form">
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
        </select>
    </div>
    <div class="form-group">
    <label for="hourStart">Office Hour Start Time:</label>
    <select name="hourStart">
        <option value="9">09</option>
        <option value="10">10</option>
        <option value="11">11</option>
        <option value="12">12</option>
        <option value="13">13</option>
        <option value="14">14</option>
        <option value="15">15</option>
        <option value="16">16</option>
        <option value="17">17</option>
        <option value="18">18</option>
    </select>
    <b>:</b>
    <select name="minStart">
        <option value="0">00</option>
        <option value="5">05</option>
        <option value="10">10</option>
        <option value="15">15</option>
        <option value="20">20</option>
        <option value="25">25</option>
        <option value="30">30</option>
        <option value="35">35</option>
        <option value="40">40</option>
        <option value="45">45</option>
        <option value="50">50</option>
        <option value="55">55</option>
    </select>
    </div>

    <p>
        <label for="hourEnd">Office Hour End Time:</label>
        <select name="hourEnd">
            <option value="9">09</option>
            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
            <option value="13">13</option>
            <option value="14">14</option>
            <option value="15">15</option>
            <option value="16">16</option>
            <option value="17">17</option>
            <option value="18">18</option>
        </select>
        <b>:</b>
        <select name="minEnd">
            <option value="0">00</option>
            <option value="5">05</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="25">25</option>
            <option value="30">30</option>
            <option value="35">35</option>
            <option value="40">40</option>
            <option value="45">45</option>
            <option value="50">50</option>
            <option value="55">55</option>
        </select>
    </p>
    <p>
        <label for="courseNum">Course Number:</label>
        <select name="courseNum">
            <option value="CSCE 155">CSCE 155A</option>
            <option value="CSCE 230">CSCE 230</option>
            <option value="CSCE 361">CSCE 361</option>
        </select>
    </p>
    <p>
        <button class="btn btn-default" type="submit" value="Add TA">Create Office Hours</button>
    </p>
</form>

<p>&nbsp;</p>
<p>
    Enter properly formatted multi-line timestamp data into the text box to populate
    the database with mock historical data.
</p>
<form action="/Data/BulkUpload" method="POST">
    <div class="form-group">
        <input type="text" class="form-control" name="dataString" />
    </div>
    <button class="btn btn-default" type="submit" value="Upload Data">Upload Data</button>
</form>

